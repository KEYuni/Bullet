<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.keyuni.android.bullet.SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar3"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="#01579B">

            <TextView
                android:id="@+id/tvToolbarEP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="20dp"
                android:paddingLeft="12dp"
                android:paddingRight="20dp"
                android:paddingStart="12dp"
                android:text="Reset Kata Sandi"
                android:textColor="#ffffff"
                android:textSize="25sp" />

        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="345dp"
            android:layout_height="496dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">



            <TextView
                android:id="@+id/tvRPEmail"
                android:layout_width="347dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:paddingBottom="5dp"
                android:text="Masukan kode konfirmasi"
                android:textColor="#093847"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etRPEmail"
                android:layout_width="347dp"
                android:layout_height="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_biru"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tvRPAlamat"
                android:layout_width="347dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:paddingBottom="5dp"
                android:text="Kata sandi baru"
                android:textColor="#093847"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etRPNomorHP"
                android:layout_width="347dp"
                android:layout_height="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_biru"
                android:ems="10"
                android:inputType="number"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvRPPass"
                android:layout_width="347dp"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:paddingBottom="5dp"
                android:text="Konfirmasi"
                android:textColor="#093847"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etRPPass"
                android:layout_width="347dp"
                android:layout_height="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_biru"
                android:ems="10"
                android:inputType="textWebPassword"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textAlignment="center"
                android:textColorHint="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvRPConfirm"
                android:layout_width="347dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:paddingBottom="5dp"
                android:text=""
                android:textColor="#093847"
                android:textStyle="bold" />



            <Button
                android:id="@+id/btnDaftar"
                android:layout_width="347dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_button_orange"
                android:text="R E S E T"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
