<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.keyuni.android.bullet.SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar3"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="#01579B">

            <TextView
                android:id="@+id/tvToolbarEP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="20dp"
                android:paddingLeft="12dp"
                android:paddingRight="20dp"
                android:paddingStart="12dp"
                android:text="Daftar Akun"
                android:textColor="#ffffff"
                android:textSize="25sp" />

        </android.support.v7.widget.Toolbar>


        <LinearLayout
            android:layout_width="345dp"
            android:layout_height="496dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSUNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:paddingBottom="5dp"
                android:text="Nama"
                android:textColor="#093847"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etSUNama"
                android:layout_width="347dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:textColor="#ffffff"
                android:inputType="textPersonName"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvSUEmail"
                android:layout_width="347dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:paddingBottom="5dp"
                android:text="E-mail"
                android:textColor="#093847"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etSUEmail"
                android:layout_width="347dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:textColor="#ffffff"
                android:inputType="textEmailAddress"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvSUNomorHP"
                android:layout_width="347dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:paddingBottom="5dp"
                android:text="Nomor HP"
                android:textColor="#093847"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etSUNomorHP"
                android:layout_width="347dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:textColor="#ffffff"
                android:inputType="number"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvSUAlamat"
                android:layout_width="347dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:paddingBottom="5dp"
                android:text="Alamat"
                android:textColor="#093847"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etSUAlamat"
                android:layout_width="347dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:textColor="#ffffff"
                android:inputType="textMultiLine"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvSUPass"
                android:layout_width="347dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:paddingBottom="5dp"
                android:text="Kata Sandi"
                android:textColor="#093847"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etSUPass"
                android:layout_width="347dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:textColor="#ffffff"
                android:hint="Minimal 6 karakter (termasuk kapital dan angka)"
                android:inputType="textWebPassword"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textColorHint="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvSUConfirm"
                android:layout_width="347dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:paddingBottom="5dp"
                android:text="Konfirmasi"
                android:textColor="#093847"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etSUConfirm"
                android:layout_width="347dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:textColor="#ffffff"
                android:hint="Masukan ulang kata sandi diatas"
                android:inputType="textWebPassword"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textColorHint="#ffffff"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnDaftar"
                android:layout_width="347dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_button_hijau"
                android:text="D A F T A R"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
