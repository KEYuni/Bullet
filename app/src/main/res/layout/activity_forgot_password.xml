<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.keyuni.android.bullet.SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar3"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="#093847">

            <TextView
                android:id="@+id/tvToolbarEP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="20dp"
                android:paddingStart="12dp"
                android:text="Lupa Kata Sandi"
                android:textColor="#ffffff"
                android:textSize="25sp" />

        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="345dp"
            android:layout_height="496dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">



            <TextView
                android:id="@+id/tvSUEmail"
                android:layout_width="347dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:paddingBottom="5dp"
                android:text="E-mail"
                android:textColor="#093847"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etSUEmail"
                android:layout_width="347dp"
                android:layout_height="5dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvSUNomorHP"
                android:layout_width="347dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:paddingBottom="5dp"
                android:text="Atau"
                android:textAlignment="center"
                android:textColor="#093847"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/tvSUAlamat"
                android:layout_width="347dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:paddingBottom="5dp"
                android:text="Nomor HP"
                android:textColor="#093847"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etSUNomorHP"
                android:layout_width="347dp"
                android:layout_height="5dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:inputType="number"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvSUPass"
                android:layout_width="347dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:paddingBottom="5dp"
                android:text=""
                android:textColor="#093847"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etSUPass"
                android:layout_width="347dp"
                android:layout_height="21dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:hint="Lupa password? jangan panik.  metode perbaikan
kata sandi anda"
                android:inputType="textWebPassword"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textAlignment="center"
                android:textColorHint="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvSUConfirm"
                android:layout_width="347dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:paddingBottom="5dp"
                android:text=""
                android:textColor="#093847"
                android:textStyle="bold" />



            <Button
                android:id="@+id/btnKirimPassBaru"
                android:layout_width="347dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_button_orange"
                android:text="K I R I M"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
